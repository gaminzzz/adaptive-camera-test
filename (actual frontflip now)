local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer

local flipCooldown = false

-- Adjustable values
local forwardBoost = 100
local upwardBoost = 30
local flipSpeed = 40 -- try negative if flip is backward

local function doFrontFlip()
	if flipCooldown then return end
	flipCooldown = true

	local character = player.Character or player.CharacterAdded:Wait()
	local root = character:WaitForChild("HumanoidRootPart")

	-- Apply launch force
	local bv = Instance.new("BodyVelocity")
	bv.Velocity = root.CFrame.LookVector * forwardBoost + Vector3.new(0, upwardBoost, 0)
	bv.MaxForce = Vector3.new(1e6, 1e6, 1e6)
	bv.P = 1e5
	bv.Parent = root

	-- Apply spin (frontflip = rotate around X-axis)
	local bav = Instance.new("BodyAngularVelocity")
	bav.AngularVelocity = Vector3.new(flipSpeed, 0, 0) -- X = forward flip
	bav.MaxTorque = Vector3.new(1e6, 1e6, 1e6)
	bav.P = 1e5
	bav.Parent = root

	-- Remove after ~0.8s
	task.delay(0.8, function()
		bv:Destroy()
		bav:Destroy()
		flipCooldown = false
	end)
end

-- Trigger with Z
UserInputService.InputBegan:Connect(function(input, gameProcessed)
	if gameProcessed then return end
	if input.KeyCode == Enum.KeyCode.Z then
		doFrontFlip()
	end
end)

